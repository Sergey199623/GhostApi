<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="sv.ghost.apiposts">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="sv.ghost.apiposts.ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="sv.ghost.apiposts.ui.FeedPostsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="sv.ghost.apiposts.ui.ErrorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="sv.ghost.apiposts.ui.DetailsPostActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>